<UserControl
    x:Class="NextMeeting.Controls.PivotItemHeaderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NextMeeting.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <SymbolIcon  Symbol="{x:Bind Symbol, FallbackValue=Contact}" />
        
        <Border Background="#FF0070C0" BorderThickness="1"
                                BorderBrush="#FF0070C0" Name="PivotItemHeaderControlBorder"
                                Opacity="0"
                                Grid.Row="1" Margin="0,5,0,0" Width="30" HorizontalAlignment="Stretch" />
    </Grid>
</UserControl>
